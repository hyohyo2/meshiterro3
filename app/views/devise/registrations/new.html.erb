<div class="container">
  <div class="row no-gutters">
    <div class="col-lg-6 col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">新規登録</h5>
      <div class="form-body p-4">
        <div class="mx-auto text-center">
          <p>以下の項目を入力してください。</p>
        </div>
        <%= form_with model: @user, url: user_registration_path do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="input-group mb-3">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名" %>
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-envelope"></i></span>
            <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "メールアドレス" %>
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>

            <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "パスワード" %>
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "パスワード(確認用)" %>
          </div>
          <%= f.submit "新規登録", class: "btn btn-lg btn-block btn-info mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>




